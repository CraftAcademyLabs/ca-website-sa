%header.mobile-navigation{ role: 'banner' }
  %label.nav-trigger-label{ role: 'menu-trigger', for: 'nav_trigger' }
  %input.nav-trigger{ type: 'checkbox', id: 'nav_trigger' }
  %nav{ role: 'navigation' }
    .image--centered.image--small
      = image_tag 'logo/graphic_only_logo_white.png'
    %ul.navigation-menu
      = partial 'nav_menu_mobile_sa'

%header.navigation.auto-hide{ role: 'banner' }
  %nav{ role: 'navigation' }
    = link_to image_tag('logo/ca_basic_logo_320x40.png'), '/', class: 'image--brand'
    %ul.navigation-menu
      = partial 'nav_menu_sa'
